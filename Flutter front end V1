import 'package:flutter/material.dart';

void main() => runApp(GreenGuideApp());

class GreenGuideApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'GreenGuide',
      theme: ThemeData(
        primarySwatch: Colors.green,
      ),
      home: WelcomePage(),
    );
  }
}

class WelcomePage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('GreenGuide'),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              'Welcome to GreenGuide',
              style: TextStyle(fontSize: 24),
            ),
            ElevatedButton(
              onPressed: () {
                Navigator.push(
                  context,
                  MaterialPageRoute(
                    builder: (context) => MenuPage(),
                  ),
                );
              },
              child: Text('Enter'),
            ),
          ],
        ),
      ),
    );
  }
}

class MenuPage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Menu'),
      ),
      body: Padding(
        padding: const EdgeInsets.all(16.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            MenuButton(
              title: 'Energy Analysis of my house',
              subtitle: 'Analyze energy consumption',
              icon: Icons.lightbulb,
              onPressed: () {
                // Navigate to Energy Analysis page
              },
            ),
            SizedBox(height: 16.0),
            MenuButton(
              title: 'My saved spaces and their energy usage breakdown',
              subtitle: 'View saved spaces',
              icon: Icons.save,
              onPressed: () {
                Navigator.push(
                  context,
                  MaterialPageRoute(
                    builder: (context) => SavedSpacesPage(),
                  ),
                );
              },
            ),
            SizedBox(height: 16.0),
            MenuButton(
              title: 'News',
              subtitle: 'Latest updates and articles',
              icon: Icons.article,
              onPressed: () {
                // Navigate to News page
              },
            ),
            SizedBox(height: 16.0),
            MenuButton(
              title: 'Suggestion Box',
              subtitle: 'Provide suggestions and feedback',
              icon: Icons.comment,
              onPressed: () {
                // Navigate to Suggestion Box page
              },
            ),
            SizedBox(height: 16.0),
            MenuButton(
              title: 'Settings',
              subtitle: 'App settings and preferences',
              icon: Icons.settings,
              onPressed: () {
                // Navigate to Settings page
              },
            ),
          ],
        ),
      ),
    );
  }
}

class MenuButton extends StatelessWidget {
  final String title;
  final String subtitle;
  final IconData icon;
  final VoidCallback onPressed;

  const MenuButton({
    required this.title,
    required this.subtitle,
    required this.icon,
    required this.onPressed,
  });

  @override
  Widget build(BuildContext context) {
    return InkWell(
      onTap: onPressed,
      child: Row(
        children: [
          Icon(icon, size: 48.0),
          SizedBox(width: 16.0),
          Column(
            crossAxisAlignment: CrossAxisAlignment.start,
            children: [
              Text(
                title,
                style: TextStyle(fontSize: 24.0),
              ),
              SizedBox(height: 4.0),
              Text(
                subtitle,
                style: TextStyle(fontSize: 16.0),
              ),
            ],
          ),
        ],
      ),
    );
  }
}

class Appliance {
  final String name;
  final String usagePerDay;
  final String costPerMonth;

  Appliance({
    required this.name,
    required this.usagePerDay,
    required this.costPerMonth,
  });
}

